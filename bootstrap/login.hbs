<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navbar</title>
    <link rel="icon" type="image/x-icon" href="../assets/img/favicon.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="../assets/css/boots.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/dbf5af6bac.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav
      class="navbar navbar-expand-md bg-light"
      aria-label="Fourth navbar example"
    >
      <div class="container-fluid">
        {{#if isLogin}}
          <div class="dropdown text-end mx-2">
            <a
              href="#"
              class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img
                src="{{userLog.file}}"
                alt="mdo"
                width="32"
                height="32"
                class="rounded-circle"
              />
            </a>
            <ul class="dropdown-menu text-small" style="">
              <li><p class="dropdown-item fw-bold">{{userLog.name}}</p></li>
              <li><p class="dropdown-item fw-light">{{userLog.subject}}</p></li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <form action="/log-out" method="post">
                  <button class="dropdown-item" type="submit">Sign out</button>
                </form>
              </li>
            </ul>
          </div>
        {{/if}}
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarsExample04"
          aria-controls="navbarsExample04"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample04">
          <ul class="navbar-nav me-auto mb-2 mb-md-0 nav-font">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="./">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="./new-project">Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="./contact-form">Contact Me</a>
            </li>
          </ul>
          {{#if isLogin}}
            {{#if (isAdmin)}}
              <a
                href="./author"
                type="button"
                class="btn btn-danger me-2 border-0"
              >ADMINISTRATOR ONLY</a>
            {{/if}}
          {{else}}
            <a
              href="./login"
              type="button"
              class="btn btn-primary me-2 black border-0"
            >Login</a>
            <a
              href="./register"
              type="button"
              class="btn btn-primary me-2 black border-0"
            >Register</a>
          {{/if}}
        </div>
      </div>
    </nav>
    {{#if messages.success}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{messages.success}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    {{#if messages.fail}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{messages.fail}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}
    <form
      class="mx-auto mt-5 container-sm"
      id="loginForm"
      action="/login"
      method="post"
    >
      <h2 class="text-center mb-4">LOGIN ACCOUNT</h2>
      <div
        class="contact-form container-md d-flex flex-column align-items-center"
      >

        <div class="mb-3 w-100" style="max-width: 800px;">
          <label for="name" class="form-label fw-bold">Email</label>
          <input
            name="email"
            id="email"
            type="email"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 w-100 d-flex flex-column" style="max-width: 800px;">
          <label for="name" class="form-label fw-bold">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            required
          />
          <div class="mt-3 align-self-end">
            <button
              class="btn btn-primary black border-0"
              type="submit"
            >Submit</button>
          </div>
        </div>

      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/project.js"></script>
  </body>
</html>