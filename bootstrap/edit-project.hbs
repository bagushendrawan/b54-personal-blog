<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navbar</title>
    <link rel="icon" type="image/x-icon" href="../assets/img/favicon.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="../assets/css/boots.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/dbf5af6bac.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body style="background-color: rgb(211, 236, 246);">
    <nav
      class="navbar navbar-expand-md bg-light"
      aria-label="Fourth navbar example"
    >
      <div class="container-fluid">
        {{#if isLogin}}
          <div class="dropdown text-end mx-2">
            <a
              href="#"
              class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img
                src="{{userLog.file}}"
                alt="mdo"
                width="32"
                height="32"
                class="rounded-circle"
              />
            </a>
            <ul class="dropdown-menu text-small" style="">
              <li><p class="dropdown-item fw-bold">{{userLog.name}}</p></li>
              <li><p class="dropdown-item fw-light">{{userLog.subject}}</p></li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <form action="/log-out" method="post">
                  <button class="dropdown-item" type="submit">Sign out</button>
                </form>
              </li>
            </ul>
          </div>
        {{/if}}
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarsExample04"
          aria-controls="navbarsExample04"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample04">
          <ul class="navbar-nav me-auto mb-2 mb-md-0 nav-font">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="./">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="./new-project">Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="./contact-form">Contact Me</a>
            </li>
          </ul>
          {{#if isLogin}}
            {{#if (isAdmin)}}
              <a
                href="./author"
                type="button"
                class="btn btn-danger me-2 border-0"
              >ADMINISTRATOR ONLY</a>
            {{/if}}
          {{else}}
            <a
              href="./login"
              type="button"
              class="btn btn-primary me-2 black border-0"
            >Login</a>
            <a
              href="./register"
              type="button"
              class="btn btn-primary me-2 black border-0"
            >Register</a>
          {{/if}}
        </div>
      </div>
    </nav>

    <form
      class="mx-auto mt-5 w-50"
      id="forms"
      enctype="multipart/form-data"
      action="/confirm-edit/{{obj.id}}"
      method="post"
    >
      <h2 class="text-center mb-4">EDIT MY PROJECT</h2>
      <div class="contact-form container-md flex-column">

        <div class="mb-3">
          <label for="name" class="form-label">Project Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="John Doe"
            value="{{obj.name}}"
            required
          />
        </div>

        <div class="row g-3 align-items-center">
          <div class="col-md-6">
            <div class="col-auto">
              <label for="start" class="col-form-label">Start Date</label>
            </div>
            <div class="col-auto">
              <input
                type="date"
                name="start"
                id="start"
                class="form-control"
                style="color:rgba(0, 0, 0, 0.75);"
                value="{{obj.start}}"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="col-auto">
              <label for="end" class="col-form-label">End Date</label>
            </div>
            <div class="col-auto">
              <input
                type="date"
                name="end"
                id="end"
                class="form-control"
                style="color:rgba(0, 0, 0, 0.75);"
                value="{{obj.end}}"
                required
              />
            </div>
          </div>
        </div>

        <div class="mt-4 mb-3">
          <label for="desc" class="form-label">Description</label>
          <textarea
            class="form-control"
            name="desc"
            id="desc"
            rows="3"
            required
          >{{obj.desc}}</textarea>
        </div>

        <div class="row g-1 mb-3">
          <div class="col-md-6 form-check">
            {{#if iconsName.node}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="node"
                value="node"
                checked
              />
            {{else}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="node"
                value="node"
              />
            {{/if}}
            <label class="form-check-label" for="node">
              Node Js
            </label>
          </div>
          <div class="col-md-6 form-check">
            {{#if iconsName.next}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="next"
                value="next"
                checked
              />
            {{else}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="next"
                value="next"
              />
            {{/if}}
            <label class="form-check-label" for="next">
              Next Js
            </label>
          </div>
          <div class="col-md-6 form-check">
            {{#if iconsName.react}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="react"
                value="react"
                checked
              />
            {{else}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="react"
                value="react"
              />
            {{/if}}
            <label class="form-check-label" for="react">
              React Js
            </label>
          </div>
          <div class="col-md-6 form-check">
            {{#if iconsName.ts}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="ts"
                value="typeScript"
                checked
              />
            {{else}}
              <input
                class="form-check-input"
                name="icons"
                type="checkbox"
                id="ts"
                value="typeScript"
              />
            {{/if}}
            <label class="form-check-label" for="ts">
              TypeScript
            </label>
          </div>
        </div>

        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Image
            {{obj.file}}</label>
          <input
            class="form-control"
            type="file"
            name="file"
            id="file"
            required
          />
        </div>

        <div>
          <button
            class="btn btn-primary black border-0"
            type="submit"
          >Confirm</button>
        </div>

      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/project.js"></script>
  </body>
</html>